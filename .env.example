# Achievement System Environment Variables

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string for the achievement system database
DATABASE_URL=mongodb://localhost:27017/achievement-system

# Redis URL for caching and session management
REDIS_URL=redis://localhost:6379

# =============================================================================
# GITHUB WEBHOOK CONFIGURATION
# =============================================================================
# Secret used to verify GitHub webhook signatures (generate a random string)
# Get this from your GitHub repository settings → Webhooks → Add webhook
GITHUB_WEBHOOK_SECRET=your_random_32_character_secret_here

# Port for the GitHub webhook server
GITHUB_WEBHOOK_PORT=8080

# =============================================================================
# PROGRAMMING PLATFORM API KEYS (OPTIONAL)
# =============================================================================
# LeetCode API Key (if using LeetCode API for additional features)
# Note: Currently not used in the main application code
# Get from: https://leetcode.com/settings/api
LEETCODE_API_KEY=your_leetcode_api_key_here

# Codeforces API URL (public API, no key required)
# This is the base URL for Codeforces API endpoints
CODEFORCES_API_URL=https://codeforces.com/api


# =============================================================================
# GITHUB ACTIONS SECRETS (for automated stats updating)
# =============================================================================
LEETCODE_USERNAME=your_leetcode_username
CODEFORCES_USERNAME=your_codeforces_handle
CODECHEF_USERNAME=your_codechef_username
ATCODER_USERNAME=your_atcoder_username
CHESS.COM_USERNAME=your_chesscom_username
MAL_USERNAME=your_mal_username


# =============================================================================
# SCHEDULING CONFIGURATION
# =============================================================================
# Daily sync time in HH:MM format (24-hour time)
DAILY_SYNC_TIME=00:00

# Timezone for scheduling operations
SYNC_TIMEZONE=UTC

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable XP (Experience Points) system
ENABLE_XP_SYSTEM=true

# Enable automatic badge unlocking
ENABLE_AUTO_UNLOCK=true

# Enable leaderboard functionality
ENABLE_LEADERBOARD=true

# Enable anti-gaming measures
ANTI_GAMING_ENABLED=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Notification service provider (email, slack, discord, etc.)
NOTIFICATION_SERVICE=email

# Email address for achievement notifications
NOTIFICATION_EMAIL=achievements@yourdomain.com

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Application port (fallback if not set via command line)
PORT=3000

